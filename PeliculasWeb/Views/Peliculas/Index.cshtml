@model PeliculasWeb.Models.Pelicula
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de Peliculas</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-success text-white">Crear nueva pelicula</a>
        </div>
    </div>

    <br />
    <br />
    <div class="p-3">
        <table id="tblPeliculas" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <td>Id</td>
                <td>Nombre</td>
                <td>Descripcion</td>
                <td>Clasificacion</td>
                <td>Duración</td>
                <td>Acciones</td>
            </tr>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/peliculas.js"></script>
}
